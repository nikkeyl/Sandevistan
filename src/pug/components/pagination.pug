.pagination
	a.pagination__arrow.pagination__arrow--prev(href="#")
		svg
			use(href="@img/icons/sprite.svg#arrow")
	ul.pagination__list
		li.pagination__item.active
			a.pagination__link(href="#") 1
		li.pagination__item
			a.pagination__link(href="#") 2
	a.pagination__arrow.pagination__arrow--next(href="#")
		svg
			use(href="@img/icons/sprite.svg#arrow")
